{
  "name": "FIP Live Radio",
  "version": "0.1.2",
  "description": "FIP Radio live player. Featuring `What's playing` and last.fm scrobbling.",
  "manifest_version": 2,
  "minimum_chrome_version": "22",
  "offline_enabled": false,
  "background": {
    "scripts": ["lib/fip-radio.js", "controllers/background.js", "bootstraps/background.js"],
    "persistent": true
  },
  "permissions": [
    "background",
    "idle",
    "http://*.fipradio.fr/",
    "http://mp3.live.tv-radio.com/"
  ],
  "browser_action": {
    "default_icon": "resources/fip.png"
  },
  "icons": {
    "16": "resources/fip.png",
    "48": "resources/fip.png",
    "128": "resources/fip.png"
  }
}