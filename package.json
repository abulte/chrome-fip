{
  "name": "chrome-fip",
  "version": "0.9.1",
  "description": "FIP Radio Chrome Extension for an in-browser listening and scrobbling experience.",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "prepackage": "npm run build",
    "package": "cd src && ls manifest.json _locales/**/*.json background/bundle.* now-playing/bundle.* now-playing/*.html resources/*.png resources/icons/css/*embedded.css | zip -9 -@ ../dist/${npm_package_name}-${npm_package_version}.zip",
    "test": "NODE_ENV=test ./node_modules/karma/bin/karma start",
    "posttest": "eslint --ignore-pattern '**/bundle.js' ./src",
    "build": "npm-run-all --parallel 'build:*'",
    "build:now-playing": "browserify -e ./src/now-playing/app.js -p [ parcelify -o ./src/now-playing/bundle.css ] -o ./src/now-playing/bundle.js",
    "build:background": "browserify -e ./src/background/app.js -o ./src/background/bundle.js",
    "start": "static -H ${npm_package_http_headers} --gzip -p ${PORT:-3000} .",
    "version": "sed -i '' -e \"s/\\\"version\\\": \\\".*\\\"/\\\"version\\\": \\\"${npm_package_version}\\\"/\" src/manifest.json && git add src/manifest.json",
    "watch": "BUILD_CHANNEL=dev npm-run-all --parallel 'watch:*' start",
    "watch:background": "watchify -dv -e ./src/background/app.js -o ./src/background/bundle.js",
    "watch:now-playing": "watchify -dv -e ./src/now-playing/app.js -p [ parcelify -wo ./src/now-playing/bundle.css ] -o ./src/now-playing/bundle.js"
  },
  "style": [
    "src/now-playing/*.scss"
  ],
  "http": {
    "headers": "{\"Access-Control-Allow-Origin\":\"*\",\"Access-Control-Allow-Methods\":\"GET\",\"Access-Control-Allow-Headers\":\"Content-Type\"}"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/oncletom/chrome-fip.git"
  },
  "keywords": [
    "fip",
    "radio",
    "chrome",
    "extension",
    "audio",
    "live",
    "streaming",
    "france"
  ],
  "author": "Thomas Parisot (https://oncletom.io)",
  "license": "MIT",
  "readmeFilename": "README.md",
  "transforms": [
    "sass-css-stream"
  ],
  "browserify": {
    "transform": [
      "envify",
      [
        "babelify",
        {
          "plugins": [
            "transform-es2015-modules-commonjs"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "babel-plugin-transform-es2015-modules-commonjs": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "chai": "^3.5.0",
    "envify": "^4.0.0",
    "eslint": "^4.0.0",
    "karma": "^0.13.0",
    "karma-browserify": "^4.4.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.0",
    "karma-sinon-chai": "^1.0.0",
    "mocha": "^2.0.0",
    "node-static": "^0.7.7",
    "npm-run-all": "^1.3.2",
    "sinon": "^2.3.4",
    "sinon-chai": "^2.11.0",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "angular": "^1.4.0",
    "lodash": "^3.10.1",
    "machina": "^1.1.2",
    "parcelify": "^2.1.0",
    "sass-css-stream": "^0.1.6",
    "superagent": "^1.6.1",
    "webextension-polyfill": "^0.1.1"
  }
}
